<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <link rel="stylesheet" href="stylesheets/style.css" />
    <script type="text/javascript"  src="//code.jquery.com/jquery-1.8.3.min.js" ></script>
</head>
<body>
  <div> 
    <div class="part">
      <label for="email">邮箱</label>
      <input class="email" type="text" id="email" name="email" value="">
    </div>
    <div class="part">
      <label for="checkcode">验证码</label>        
      <input class="checkcode" type="text" id="checkcode" name="checkcode" value="">
      <input type="submit" class="btn" id="sendCd" value="发送验证码">
    </div>
    <div class="part">
      <label for="password">密码</label>        
      <input class="password" type="text" name="password" value="">
    </div>
    <div class="part">
      <label for="comfirm">确认密码</label>
      <input class="comfirm" type="text" name="comfirm" value="">
    </div>
    <div class="sub">
      <input type="submit" class="register" value="一键注册">
    </div>
  </div>
  <script type="text/javascript">
    //发送验证码的按钮
    var t=180;
    $(".btn").on('click', function() {
      var email = $(".email").val();
      $.post("/sendCode", { 
        email: email,
      }, function(res) {
          alert(res);
      })
      var time=setInterval(function(){
        cntDown();
      },1000)
      function cntDown(){
        t--;
        $(".btn").val("重新发送("+t+")");
        if(t<=0)
        {
          clearInterval(time);
          $(".btn").attr("disabled", false);
          $(".btn").val('获取验证码');
        }
        else
        {
          $(".btn").attr("disabled", "disabled");
        }
      }
    })
    //提交注册信息的按钮
    $(".register").on('click', function() {
      var email = $(".email").val();
      var checkcode = $(".checkcode").val();
      var password = $(".password").val();
      var comfirm = $(".comfirm").val();
      //console.log(comfirm);
      
      $.post("/", { 
        email: email,
        checkcode: checkcode,
        password: password,
        comfirm: comfirm,
      }, function(res) {
        alert(res);
        $(".email").val('');
        $(".checkcode").val('');
        $(".password").val('');
        $(".comfirm").val('');
        t=0;
      })
    })
  </script>
</body>
</html>

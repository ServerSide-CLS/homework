<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <script type="text/javascript"  src="//code.jquery.com/jquery-1.8.2.min.js" ></script>
  </head>
  <body>
    <form>
      <div>
        <label for="email">邮箱</label>
        <input type="text" name="email" value="">
      </div>
      <div>
        <label for="checkcode">验证码</label>        
        <input type="text" name="checkcode" value="">
        <input type="submit" οnclick="timeDown()" action="/sendCode?"  class="btn btn-danger" id="sendcode" value="发送验证码">
      </div>
      <div>
        <label for="password">密码</label>        
        <input type="text" name="password" value="">
      </div>
      <div>
        <label for="comfirm">确认密码</label>
        <input type="text" name="comfirm" value="">
      </div>
      <div>
        <button type="submit">一键注册</button>
      </div>
    </form>
     <script>
      var t=180;
      function time(o) 
      {
        if(t==0)
        {
           o.removeAttribute("disabled");
           o.value="获取验证码";  
           t=60;
        }
        else
        {
          o.setAttribute("disabled", true); 
          o.value="重新发送(" + t + ")";  
          t--;
          setTimeout(function() {  
            time(o)  
          }, 1000)
        }
        //document.getElementById("sendcode").herf='sendCode?';
      }
      document.getElementById("sendcode").onclick=function(){time(this);}
    </script>
  </body>
</html>
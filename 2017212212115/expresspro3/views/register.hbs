<div id="register-registerDiv" class="container w-50 p-3">
    <form action="/" method="POST">
        <div class="form-group">
            <label for="register-email">邮箱</label>
            <input id="register-email" name="email" type="text" class="form-control"
                aria-describedby="emailHelp" placeholder="邮箱">
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="register-captcha">验证码</label>
                <input id="register-captcha" name="captcha" type="text" class="form-control" placeholder="验证码">
            </div>
            <div class="form-group col-md-6">
                <label><p></p></label>
                <button type="button" id="register-sendCaptcha" class="btn btn-primary form-control">获取验证邮箱有效性</button>
            </div>
        </div>
        <div class="form-group">
            <label for="register-password">密码</label>
            <input id="register-password" name="password" type="password" class="form-control" placeholder="密码">
        </div>
        <div class="form-group">
            <label for="register-passwordConfirm">确认密码</label>
            <input id="register-passwordConfirm" name="passwordConfirm" type="password" class="form-control" placeholder="确认密码">
        </div>
        <button id="register-submit" type="submit" class="btn btn-primary">注册</button>
    </form>
</div>
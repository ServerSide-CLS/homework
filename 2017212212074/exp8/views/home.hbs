<form class="form-horizontal" action="/register" method="POST">
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-3 control-label">邮箱</label>
        <div class="col-sm-6">
            <input type="email" class="form-control" id="email" placeholder="Email" name="email">
        </div>
        <button class="btn btn-default" type="button" id="sendEmail">验证邮箱</button>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-3 control-label">验证码</label>
        <div class="col-sm-6">
            <input type="password" class="form-control" placeholder="verification code" name="code">
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-3 control-label">密码</label>
        <div class="col-sm-6">
            <input type="password" class="form-control" placeholder="password" name="password">
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-3 control-label">确认密码</label>
        <div class="col-sm-6">
            <input type="password" class="form-control" placeholder="password again" name="password2">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
            <button type="submit" class="btn btn-default">注册</button>
        </div>
    </div>
</form>
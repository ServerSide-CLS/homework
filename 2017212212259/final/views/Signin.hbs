<div class="sign_in">
	<div class="input">
		<form action="/isCorrectLogin" method="post">
			<p id=title_signin>NDSC登录</p>
			<input type="text" class="form-control" name="username" placeholder="请输入用户名" aria-describedby="sizing-addon1" id="username">
			<p class="tip_login" style="color: red">*{{check_user}}</p>
			<input type="password" class="form-control" name="pwd" placeholder="请输入密码" aria-describedby="sizing-addon1" id="pwd">
			<p class="tip_login" style="color: red">*{{check_pwd}}</p>
			<input type="submit" class="btn btn-default" name="submit" value="登录" id="button_signin">
			<p style="color: green">{{register_success}}</p>
		</form>
	</div>
</div>
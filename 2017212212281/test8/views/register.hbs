	<br>    
	<form action="/registerPost" class="form-horizontal" method="POST">
        <div class="form-group">
            <label for="Email" class="col-sm-1 control-label">Email</label>
			<div class="col-sm-4">
            	<input type="text" class="form-control" placeholder="请输入Email" name="Email" id="Email">
			</div>        
		</div>
        <div class="form-group">
            <label for="pwd" class="col-sm-1 control-label">密码</label>
			<div class="col-sm-4">
           		<input type="password" class="form-control" placeholder="请输入密码" name="pwd" id="pwd">
			</div>        
		</div>
        <div class="form-group">
            <label for="pwdConfirm" class="col-sm-1 control-label">确认密码</label>
			<div class="col-sm-4">
            	<input type="password" class="form-control" placeholder="请确认密码" name="pwdConfirm" id="pwdConfirm">
       		</div>
		</div>
        <div class="form-group">
            <label for=checkNum" class="col-sm-1 control-label">验证码</label>
			<div class="col-sm-2">
            	<input type="text" class="form-control" placeholder="请输入验证码" name="checkNum" id="checkNum">
			</div>            
			<button type="button" class="btn btn-primary" id="getCode">获取验证码</button>
        </div>
        <div class="form-group">
            <button class="btn btn-primary col-sm-offset-1" type="submit" id="mailRegister">注册</button>
        </div>
    </form>
    <script src="/public/js/jquery-3.3.1.min.js"></script>
    <script src="/public/js/register.js"></script>


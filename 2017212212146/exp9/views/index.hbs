<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>
{{js "javascripts/things.js"}}
{{css "stylesheets/login.css"}}

<div class="row">
    <div class=" col-lg-4 offset-4">
        <div class=" login">
            <form>
            <div class="login_title text-center">注册</div>
                <div class="form-group row">
                <input type="text" class="form-control" placeholder="Email" id="email" name="email">
                </div>
                <div class="form-group row">
                <input type="password" class="form-control" placeholder="密&nbsp;&nbsp;码" id="pwd1" name="pwd">
                </div>
                <div class="form-group row">
                <input type="password" class="form-control" placeholder="确认密码" id="pwd2" name="checkpwd">
                </div>
            <div class="form-group code row">
                <input type="text" class="form-control col-sm-4" placeholder="验证码" id="code" name="code">
                <button class="btn btn-info bt col-sm-4 offset-1" id="varify">点击验证邮箱</button>
                </div>
                <button id="submit" class="btn btn-light btn-block">注册</button>
        </form>
        </div>
    </div>
</div>
<body>
  <div class="container1">
    <form class="form-horizontal" name='login' method="POST">

      <div class="form-group">
        <label for="exampleInputUsername1" class="col-sm-2 control-label  inline-style font-position-right">邮箱</label>
        <div class="col-sm-9  inline-style">
          <input type="email" class="form-control" id="exampleInputEmail1" name='loginEmail' placeholder="邮箱" required>
        </div>
        <div class="form-group">
        </div>
      </div>

      <div class="form-group">
        <label for="exampleInputUsername1" class="col-sm-2 control-label  inline-style font-position-right">密码</label>
        <div class="col-sm-9  inline-style">
          <input type="password" class="form-control" id="exampleInputPassword1" name='loginPwd' placeholder="密码" required>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
          <button class="btn btn-lg btn-primary btn-block register-btn" type="submit">登录</button>
        </div>
      </div>

    </form>
  </div>
  {{!-- message --}}
  {{#if msg}}
  <div class="m-msg" style="background: {{msg.color}};">
    {{msg.message}}
  </div>
  {{/if}}

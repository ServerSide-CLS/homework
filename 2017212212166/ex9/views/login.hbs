<title>登录</title>

<form action="/login" method="post">
    <div class="form-group">
        <input type="text" class="form-control" name="username" placeholder="email" id="user_name">
    </div>
    <div class="form-group">
        <input type="password" class="form-control" name="pwd" placeholder="密码" id="pwd">
    </div>
    <br />
    <div class="form-group">
        <input type="submit" class="form-control" value="登录" id="login_btn">
    </div>
</form>

<p id="info">{{message}}</p>
{{js "javascripts/login.js"}}
{{css "stylesheets/login.css"}}

	<div class="row">
		<div class=" col-lg-4 offset-4">
			<div class=" login">
			 <form>
				<div class="login_title text-center">注册</div>
				  <div class="form-group">
					<input type="text" class="form-control" placeholder="Email" id="email" name="email">
				  </div>
				  <div class="form-group">
					<input type="password" class="form-control" placeholder="密码" id="pwd1" name="pwd1">
				  </div>
                   <div class="form-group">
					<input type="password" class="form-control" placeholder="确认密码" id="pwd2" name="pwd2">
				  </div>
                <div class="form-group code">
					<input type="text" class="form-control" placeholder="验证码" id="code" name="code">
				  </div>
				  <button class="btn btn-info bt" id="varify">点击验证邮箱</button>

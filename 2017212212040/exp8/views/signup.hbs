<form action="/check" method="post">
		<input type="text" name="account" placeholder="帐号" id="email" required>

      <button type = "Submit"  id="checkbt">获取验证密码有效性</button>
       {{#if msg}}
      <p id="msg" style="color:red">{{msg}}</p>
    {{/if}}
 </form>
 <form action="/signup" method="post">
      <input type="text" name="checknum" placeholder="验证码" required>
      <input type="password" name="password" placeholder="输入密码" required>

      <input type="password" name="passwordagain" placeholder="确认密码" required>

      <button type = "Submit">Sign up</button>


      {{#if message}}
      <p style="color:red">{{message}}</p>
    {{/if}}
 </form>